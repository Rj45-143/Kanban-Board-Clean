{
  "name": "kanban-local",
  "version": "0.1.0",
  "private": true,
  "main": "electron.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "electron": "electron .",
    "export": "next export",
    "dist": "next build && electron-builder --win",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx"
  },
  "dependencies": {
    "@hello-pangea/dnd": "^18.0.1",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.3",
    "electron-is-dev": "^3.0.1",
    "flatpickr": "^4.6.13",
    "mongodb": "^7.0.0",
    "mongoose": "^9.1.2",
    "next": "16.1.1",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-flatpickr": "^4.0.11",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "build": {
    "appId": "com.yourcompany.kanbanapp",
    "productName": "Kanban App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron.js",
      "package.json",
      "next.config.js",
      ".next/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "verifyUpdateCodeSignature": false
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "identity": null
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "forceCodeSigning": false
  },
  "author": "Your Name",
  "description": "Kanban app built with Next.js + Electron"
}
